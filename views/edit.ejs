<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/style.css">
    <link rel="stylesheet" href="/styles/styles-1.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Moderustic:wght@300..800&display=swap" rel="stylesheet">
    <style>
        input[type="text"], input[type="email"], textarea {
            width: 100%; /* Make inputs full width */
            box-sizing: border-box; /* Include padding and border in element's width */
            overflow-wrap: break-word; /* For input fields, this helps with long text */
            word-wrap: break-word; /* Ensures text will wrap */
        }

        textarea {
            min-height: 50px; /* Minimum height */
            resize: none; /* Disable manual resizing */
        }

        input[type="text"], input[type="email"], input[name="topic"] {
            overflow: hidden; /* Prevents scrollbar */
            resize: none; /* Prevents manual resize */
        }
        h1 {
            font-family: "Playfair Display", serif;
            font-optical-sizing: auto;
            font-weight: 800;
            font-style: normal;
            font-size: 4em;
            width: 50%;
            margin-left: 25%;
        }
        .Blog-Topic {
            padding-bottom: 2rem;
        }
        h2 {
            padding-left: 3rem;
        }
        .btn {
            background-color: black;
            color: white;
            border-color: black;
        }
        .btn:hover {
            background-color: white;
            color: black;
        }
        .highlighted-heading{
          font-weight: bold;
        }
    </style>
</head>
<body>

    <section class="navigation">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header navbar-brand">Elegant Chronicles</div>
                <ul class="navbar-nav">
                    <li><a href="/">Home</a></li>
                    <li><a href="/create-blogs">Create Blogs</a></li>
                    <li><a href="/technology">Technology</a></li>
                    <li><a href="/business">Business</a></li>
                    <li><a href="/finance">Finance</a></li>
                    <li><a href="/gaming">Gaming</a></li>
                    <li><a href="/personal-development">Personal Development</a></li>
                </ul>
            </div>
        </nav>
    </section>

    <section class="edit-blog-section">
        <div class="container-fluid">
            <h1>Edit Blog</h1>
            <form action="/update/<%= index %>" method="POST">
                <label for="topic">Topic:</label>
                <input type="text" id="topic" name="topic" value="<%= blog.topic %>" required>
                
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" value="<%= blog.name %>" required>
                
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="<%= blog.email %>" required>
                
                <div class="form-group">
                    <label for="category">Category:</label>
                    <select id="category" name="category" required>
                        <option value="Technology">Technology</option>
                        <option value="Business">Business</option>
                        <option value="Finance">Finance</option>
                        <option value="Gaming">Gaming</option>
                        <option value="Personal Development">Personal Development</option>
                        <option value="Education">Education</option>
                        
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="blog">Blog:</label>
                    <textarea id="comment" name="comment" rows="10" cols="30" value="<%= blog.blog %>" placeholder="Your blog content here" required> <%= blog.blog %> </textarea>
                </div>
                <button type="submit" id="submit" name="submit">Edit</button>
            </form>
        </div>
    </section>


    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const textareas = document.querySelectorAll("textarea");
            const inputs = document.querySelectorAll("input[type='text'], input[type='email'], input[name='topic']");

            // Adjust the height of the textarea automatically
            textareas.forEach(textarea => {
                textarea.addEventListener("input", () => {
                    textarea.style.height = "auto"; // Reset height
                    textarea.style.height = `${textarea.scrollHeight}px`; // Set new height
                });
            });

            // Adjust the width of the input fields automatically
            inputs.forEach(input => {
                input.addEventListener("input", () => {
                    input.style.width = "auto"; // Reset width
                    input.style.width = `${input.scrollWidth}px`; // Set new width
                });
            });
        });
    </script>
